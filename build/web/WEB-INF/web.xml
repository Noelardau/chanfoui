<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>servlet.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>servlet.ClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProduitServlet</servlet-name>
        <servlet-class>servlet.ProduitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommandeServlet</servlet-name>
        <servlet-class>servlet.CommandeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FactureServlet</servlet-name>
        <servlet-class>servlet.FactureServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/ClientServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProduitServlet</servlet-name>
        <url-pattern>/ProduitServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommandeServlet</servlet-name>
        <url-pattern>/CommandeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FactureServlet</servlet-name>
        <url-pattern>/Facturation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/User</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
